.modal {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.6);
}

.modal-content {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translateX(-50%) translateY(-50%);
    width: 80%;
    height: auto;
    overflow: hidden;
    border-radius: 8rpx;
    background: #fff;
}

.modal-top {
    padding-left: 20rpx;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 32rpx;
    background: #f2f2f2;
}

.modal-body {
    padding: 50rpx 30rpx;
    height: auto;
    line-height: 48rpx;
    font-size: 32rpx;
    text-align: center;
    border-bottom: 1rpx solid #e5e5e5;
}

.modal-footer {
    width: 100%;
    height: 90rpx;
    line-height: 90rpx;
    font-size: 40rpx;
    display: flex;
    justify-content: flex-center;
}

.cancle {
    height: 100%;
    text-align: center;
    border-right: 1rpx solid #e5e5e5;
    flex: 1;
}

.sure {
    flex: 1;
    height: 100%;
    text-align: center;
    color: #576b95;
}
